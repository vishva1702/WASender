@{
    ViewData["Title"] = "Whatsapp Settings";
}

@using WASender.Models

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    ViewData["Title"] = "Admins";
    ViewData["Buttons"] = new List<dynamic>
    {
        new { name = "Back To Dashboard", url = Url.Action("Index", "AdminDeveloperSettings"), is_button = false, components = "" }
    };
}

@await Html.PartialAsync("_HeaderSection")

<div class="row">
    <div class="col-lg-5 mt-5">
        <strong>Whatsapp Server Settings</strong>
        <p>Edit your Whatsapp server settings</p>
    </div>

    <div class="col-lg-7 mt-5">
        <form asp-action="Update" asp-controller="AdminDeveloperSettings" asp-area="Admin" asp-route-id="@ViewBag.Id" method="post" class="ajaxform">
            @Html.AntiForgeryToken()
            <input type="hidden" name="_method" value="PUT" />

            <div class="card">
                <div class="card-body">

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Whatsapp Server Url</label>
                        <div class="col-lg-12">
                            <input type="text" name="wa_server_url" class="form-control" required value="@Environment.GetEnvironmentVariable("WA_SERVER_URL")" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Whatsapp Server Host</label>
                        <div class="col-lg-12">
                            <input type="text" name="host" class="form-control" required value="@Environment.GetEnvironmentVariable("WA_SERVER_HOST")" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Whatsapp Server Port</label>
                        <div class="col-lg-12">
                            <input type="text" name="port" class="form-control" required value="@Environment.GetEnvironmentVariable("WA_SERVER_PORT")" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Max Retries</label>
                        <div class="col-lg-12">
                            <input type="number" name="MAX_RETRIES" class="form-control" required value="@Environment.GetEnvironmentVariable("WA_SERVER_MAX_RETRIES")" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Reconnect Interval</label>
                        <div class="col-lg-12">
                            <input type="number" name="reconnect_interval" class="form-control" required value="@Environment.GetEnvironmentVariable("WA_SERVER_RECONNECT_INTERVAL")" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Delay Time For Per Message (Millisecond)</label>
                        <div class="col-lg-12">
                            <input type="number" name="DELAY_TIME" class="form-control" required placeholder="1000 ms = 1 sec" value="@Environment.GetEnvironmentVariable("DELAY_TIME")" />
                        </div>
                    </div>

                    <div class="form-group row mt-3">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-neutral submit-button btn-sm float-left">Update Settings</button>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>
