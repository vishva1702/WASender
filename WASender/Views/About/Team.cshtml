@await Html.PartialAsync("_Header2")


@{
    ViewData["Title"] = "Our Team";
}

<main>
    <!-- Breadcrumb Area Start -->
    <div class="breadcrumb__area breadcrumb-height p-relative grey-bg"
         data-background="@Url.Content("~/assets/frontend/img/breadcrumb/breadcrumb.jpg")">
        <div class="breadcrumb__scroll-bottom smooth">
            <a href="#team">
                <i class="far fa-arrow-down"></i>
            </a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center">
                        <h3 class="breadcrumb__title">Team</h3>
                        <div class="breadcrumb__list">
                            <span><a asp-controller="Home" asp-action="Index">Home</a></span>
                            <span class="dvdr"><i class="fa fa-angle-right"></i></span>
                            <span>Our Team</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Area End -->

    <div id="team" class="tp-team__area tp-team__inner p-relative pt-130 pb-70">
        <div class="container">
            <div class="row">
                @foreach (var team in ViewBag.TeamMembers)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 mb-70">
                        <div class="tp-team__item text-center">
                            <div class="tp-team__img fix">
                                <img src="@Url.Content(team.Avatar)" alt="@team.Name">
                            </div>
                            <div class="tp-team__content">
                                <h4 class="tp-team__title"><a href="#">@team.Name</a></h4>
                                <span>@team.Position</span>
                            </div>
                            <div class="tp-team__social">
                                @if (!string.IsNullOrEmpty(team.Socials.Facebook))
                                {
                                    <a href="@team.Socials.Facebook"><i class="fab fa-facebook-f"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(team.Socials.Twitter))
                                {
                                    <a href="@team.Socials.Twitter"><i class="fab fa-twitter"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(team.Socials.LinkedIn))
                                {
                                    <a href="@team.Socials.LinkedIn"><i class="fab fa-linkedin"></i></a>
                                }
                                @if (!string.IsNullOrEmpty(team.Socials.Instagram))
                                {
                                    <a href="@team.Socials.Instagram"><i class="fab fa-instagram"></i></a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</main>
