@model dynamic
@await Html.PartialAsync("_Header2")

@{
    ViewData["Title"] = "About Us";
}


<main>
    <!-- Breadcrumb Section -->
    <div class="breadcrumb__area breadcrumb-height p-relative grey-bg"
         style="background-image: url('~/assets/frontend/img/breadcrumb/breadcrumb.jpg');">
        <div class="breadcrumb__scroll-bottom smooth">
            <a href="#tp-service__area">
                <i class="far fa-arrow-down"></i>
            </a>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center">
                        <h3 class="breadcrumb__title">@ViewData["BreadcrumbTitle"]</h3>
                        <div class="breadcrumb__list">
                            <span><a href="/">Home</a></span>
                            <span class="dvdr"><i class="fa fa-angle-right"></i></span>
                            <span>About us</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- About Section -->
    <div id="about-inner_area" class="about-inner_area pt-130 pb-130">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-9 col-md-12">
                    <div class="about-inner__section-box mb-70 text-center wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".3s">
                        <span class="about-inner__subtitle">About Company</span>
                        <h3 class="tp-section-title-md">@ViewData["SectionTitle"]</h3>
                    </div>
                </div>
            </div>
            <div class="row g-0">
                <div class="col-xl-7 col-lg-7">
                    <div class="about-inner__wrapper wow tpfadeLeft" data-wow-duration=".9s" data-wow-delay=".5s">
                        <div class="row gx-10">
                            <div class="col-xl-6 col-lg-6 col-md-6 mb-20">
                                <div class="about-inner__thumb w-img">
                                    <img src="@ViewData["AboutImage1"]" alt="About Image 1">
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6">
                                <div class="about-inner__content-item mb-10 d-flex align-items-center">
                                    <span>@ViewData["Experience"]</span>
                                    <p>@ViewData["ExperienceTitle"]</p>
                                </div>
                                <div class="about-inner__thumb-2 w-img mb-20">
                                    <img src="@ViewData["AboutImage2"]" alt="About Image 2">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-lg-5 wow tpfadeRight" data-wow-duration=".9s" data-wow-delay=".7s">
                    <div class="about-inner__right">
                        <div class="about-inner__content">
                            @if (ViewData["Descriptions"] is List<string> descriptions && descriptions.Any())
                            {
                                <ul>
                                    @foreach (var description in descriptions)
                                    {
                                        <li>@description</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>No description available.</p>
                            }
                            <br>
                        </div>
                        <div class="about-inner__list">
                            <ul>
                                @if (ViewData["Facilities"] is List<string> facilities && facilities.Any())
                                {
                                    <ul>
                                        @foreach (var facility in facilities)
                                        {
                                            <li><i class="far fa-check"></i> @facility</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>No facilities listed.</p>
                                }
                            </ul>
                        </div>
                        <div class="about-inner__btn d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(ViewData["ButtonTitle"] as string))
                            {
                                <a class="tp-btn-blue-square mr-20" href="@ViewData["ButtonLink"]">
                                    <span>@ViewData["ButtonTitle"]</span>
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(ViewData["IntroducingVideo"] as string))
                            {
                                <a class="about-inner__play-btn popup-video" href="@ViewData["IntroducingVideo"]">
                                    <i class="fas fa-play"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- tp-service-area-start -->
    <div id="tp-service__area" class="tp-service__area tp-service__space service-inner grey-bg pt-120 pb-100">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="tp-service__section-wrapper service-inner d-flex justify-content-between wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".5s">
                        <div class="tp-service__title-box ml-40">
                            <h3 class="tp-service__title">Our Features</h3>
                        </div>
                        <div class="tp-service__inner-btn">
                            <a class="tp-btn-blue-square" href="@Url.Action("Index", "Features")"><span>See All Features</span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tp-service__slider-wrapper service-inner">
                <div class="tp-service__slider-active">
                    @foreach (var feature in ViewBag.Features)
                    {
                        <div class="tp-service__item wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".7s">
                            <div class="tp-service__icon">
                                <img src="@feature.Preview" alt="Feature Image">
                            </div>
                            <div class="tp-service__content">
                                <h4 class="tp-service__title-sm">
                                    <a href="@Url.Action("Details", "Features", new { slug = feature.Post.Slug })">
                                        @(feature.Post.Title.Length > 20 ? feature.Post.Title.Substring(0, 20) + "..." : feature.Post.Title)
                                    </a>
                                </h4>
                                <p>@(feature.Excerpt.Length > 100 ? feature.Excerpt.Substring(0, 100) + "..." : feature.Excerpt)</p>
                            </div>
                            <div class="tp-service__link">
                                <a href="@Url.Action("Details", "Features", new { slug = feature.Post.Slug })">
                                    <svg width="39" height="16" viewBox="0 0 39 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M38.7071 8.70711C39.0976 8.31658 39.0976 7.68342 38.7071 7.29289L32.3431 0.928932C31.9526 0.538408 31.3195 0.538408 30.9289 0.928932C30.5384 1.31946 30.5384 1.95262 30.9289 2.34315L36.5858 8L30.9289 13.6569C30.5384 14.0474 30.5384 14.6805 30.9289 15.0711C31.3195 15.4616 31.9526 15.4616 32.3431 15.0711L38.7071 8.70711ZM0 9H38V7H0V9Z" fill="currentColor" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- tp-service-area-end -->


    <!-- Counter Section -->
    <div class="tp-counter-2_area tp-counter-2_space counter-inner grey-bg pb-100">
        <div class="container">
            <div class="tp-counter-2__wrapper pt-65">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 mb-30 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".5s">
                        <div class="tp-counter-2__item d-flex align-items-center justify-content-sm-start justify-content-center">
                            <div class="tp-counter-2__icon">
                                <img src="~/assets/frontend/img/counter/counter-7.png" alt="">
                            </div>
                            <div class="tp-counter-2__content">
                                <h4><span class="counter">@ViewData["Experience"]</span>+</h4>
                                <span>Years of Experience</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 mb-30 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".7s">
                        <div class="tp-counter-2__item d-flex align-items-center justify-content-sm-start justify-content-center">
                            <div class="tp-counter-2__icon">
                                <img src="~/assets/frontend/img/counter/counter-6.png" alt="">
                            </div>
                            <div class="tp-counter-2__content">
                                <h4><span class="counter">@ViewData["ActiveCustomers"]</span>+</h4>
                                <span>Active Customers</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 mb-30 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".9s">
                        <div class="tp-counter-2__item d-flex align-items-center justify-content-sm-start justify-content-center">
                            <div class="tp-counter-2__icon">
                                <img src="~/assets/frontend/img/counter/counter-5.png" alt="">
                            </div>
                            <div class="tp-counter-2__content">
                                <h4><span class="counter">@ViewData["PositiveReviews"]</span>+</h4>
                                <span>Positive Reviews</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 mb-30 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay="1s">
                        <div class="tp-counter-2__item d-flex align-items-center justify-content-sm-start justify-content-center">
                            <div class="tp-counter-2__icon">
                                <img src="~/assets/frontend/img/counter/counter-8.png" alt="">
                            </div>
                            <div class="tp-counter-2__content">
                                <h4><span class="counter">@ViewData["SatisfiedCustomers"]</span>+</h4>
                                <span>Satisfied Customers</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pricing Section -->
    @using System.Text.Json





    <!-- tp-team-area-start -->
    <div class="tp-team__area p-relative">
        <div class="tp-team__grey-bg grey-bg"></div>
        <div class="tp-team__ml-mr theme-bg-3 pt-120 pb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".5s">
                        <div class="tp-team__section-box d-flex justify-content-between">
                            <h3 class="tp-section-title-md text-white">Meet with our <br> team</h3>
                            <div class="tp-team__btn">
                                <a class="tp-btn-pink mb-15" href="@Url.Action("Team", "About")">
                                    <span>All Team Members</span>
                                </a>
                                <a class="tp-btn-sky-sm mb-15 ml-15" href="@Url.Action("Contact", "Home")">
                                    <span>Join our Team</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @if (ViewBag.TeamMembers != null)
                    {
                        @foreach (var member in ViewBag.TeamMembers)
                        {
                            var team = member.Post;
                            var socialLinks = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(member.Excerpt);

                            <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 mb-70 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".6s">
                                <div class="tp-team__item text-center">
                                    <div class="tp-team__img fix">
                                        <img src="@member.Preview" alt="@team.Title"> <!-- Use preview image -->
                                    </div>
                                    <div class="tp-team__content">
                                        <h4 class="tp-team__title"><a href="javascript:void(0)">@team.Title</a></h4>
                                        <span>@team.Slug</span> <!-- Assuming slug is the position -->
                                    </div>
                                    <div class="tp-team__social">
                                        @if (socialLinks != null)
                                        {
                                            if (!string.IsNullOrEmpty((string)socialLinks.facebook))
                                            {
                                                <a href="@socialLinks.facebook"><i class="fab fa-facebook-f"></i></a>
                                            }
                                            if (!string.IsNullOrEmpty((string)socialLinks.twitter))
                                            {
                                                <a href="@socialLinks.twitter"><i class="fab fa-twitter"></i></a>
                                            }
                                            if (!string.IsNullOrEmpty((string)socialLinks.linkedin))
                                            {
                                                <a href="@socialLinks.linkedin"><i class="fab fa-linkedin"></i></a>
                                            }
                                            if (!string.IsNullOrEmpty((string)socialLinks.instagram))
                                            {
                                                <a href="@socialLinks.instagram"><i class="fab fa-instagram"></i></a>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>

            </div>
        </div>
    </div>

    <!-- tp-FAQ-area-start -->
    <div class="tp-faq__area pt-120 pb-110">
        <div class="container">
            <div class="row">
                <div class="col-xl-7 col-lg-6 wow tpfadeLeft" data-wow-duration=".9s" data-wow-delay=".7s">
                    <div class="tp-custom-accordio-3">
                        <div class="accordion" id="faqAccordion">
                            @if (ViewBag.Faqs != null)
                            {
                                int key = 1;
                                foreach (var faq in ViewBag.Faqs)
                                {
                                    if (faq.Slug != "top") // Condition Applied Here
                                    {
                                        <div class="accordion-items">
                                            <h2 class="accordion-header" id="heading-@key">
                                                <button class="accordion-buttons @(key > 1 ? "collapsed" : "")" type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#collapse-@key" aria-expanded="@(key == 1 ? "true" : "false")" aria-controls="collapse-@key">
                                                    @faq.Title
                                                </button>
                                            </h2>
                                            <div id="collapse-@key" class="accordion-collapse collapse @(key == 1 ? "show" : "")" aria-labelledby="heading-@key"
                                                 data-bs-parent="#faqAccordion">
                                                <div class="accordion-body">
                                                    @faq.Excerpt
                                                </div>
                                            </div>
                                        </div>
                                        key++;
                                    }
                                }
                            }
                            else
                            {
                                <p class="text-center">No FAQs available.</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xl-5 col-lg-6 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".9s">
                    <div class="tp-faq__right-side text-center">
                        <div class="tp-faq__icon">
                            <a href="#">
                                <svg width="30" height="29" viewBox="0 0 30 29" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.9542 23.9764L0 29V0H30V23.9764H5.9542Z" fill="#017EFA" />
                                </svg>
                            </a>
                        </div>
                        <div class="tp-faq__content">
                            <h4 class="tp-faq__faq-sm-title">Do you have more questions?</h4>
                            <p>
                                End-to-end payments and financial management in a single solution. Meet the right platform to help realize.
                            </p>
                            <a href="@Url.Action("Contact", "Home")">Shoot a Direct Mail</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tp-FAQ-area-end -->


</main>

