@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    ViewData["Title"] = "App Settings";
    var appName = Environment.GetEnvironmentVariable("APP_NAME");
    var appDebug = Environment.GetEnvironmentVariable("APP_DEBUG");
}

@* Include header partial *@
@await Html.PartialAsync("~/Views/Shared/_HeaderSection.cshtml", new
    {
        title = "App Settings",
        buttons = new[] {
        new { name = "Back to dashboard", url = Url.Action("Dashboard", "Admin") }
    }
    })
<div class="row">
    <div class="col-lg-5 mt-5">
        <strong>Application Settings</strong>
        <p>Edit your application global settings</p>
    </div>
    <div class="col-lg-7 mt-5">
        <form asp-action="Update" asp-controller="DeveloperSettings" asp-route-id="@ViewBag.Id" method="post" class="ajaxform">
            @Html.AntiForgeryToken()
            <input type="hidden" name="_method" value="PUT" />

            <div class="card">
                <div class="card-body">

                    <div class="form-group row">
                        <label class="col-lg-12">Application Name</label>
                        <div class="col-lg-12">
                            <input type="text" name="name" value="@appName" required class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Visibility Of Site Error</label>
                        <div class="col-lg-12">
                            <select class="form-control" name="app_debug">
                                <option value="true" selected="@(appDebug == "true")">Enable</option>
                                <option value="false" selected="@(appDebug == "false")">Disable</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Application Time Zone</label>
                        <div class="col-lg-12">
                            <input type="text" name="timezone" class="form-control" placeholder="e.g., UTC, Asia/Kolkata" />
                        </div>
                    </div>

                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save Settings</button>
            </div>

        </form>
    </div>
</div>
