

@await Html.PartialAsync("_HeaderSection")

    @{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    ViewData["Title"] = "SMTP Settings";
}

<!-- Header Section -->
<div class="d-flex justify-content-end align-items-center mb-4">
    <a href="/AdminHome/Index" class="btn btn-outline-primary btn-sm btn-icon">
        Back to dashboard
    </a>
</div>

<div class="row">
    <!-- Left Info Section -->
    <div class="col-lg-5 mt-5">
        <strong>SMTP mail Settings</strong>
        <p>Edit your SMTP settings for mail transactions.</p>
    </div>

    <!-- Form Section -->
    <div class="col-lg-7 mt-5">
        <form asp-action="UpdateDeveloperSettings" method="post">
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-body">

                    <!-- Queue Mail Option -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Use Queue Job For Mail Transaction?</label>
                        <div class="col-lg-12">
                            <select name="QUEUE_MAIL" class="form-control">
                                @if (ViewBag.QueueMail == "true")
                                {
                                    <option value="true" selected>Enable</option>
                                    <option value="false">Disable</option>
                                }
                                else
                                {
                                    <option value="true">Enable</option>
                                    <option value="false" selected>Disable</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Mail Driver Type -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail driver type</label>
                        <div class="col-lg-12">

                            <select name="MAIL_DRIVER_TYPE" class="form-control">
                                @if (ViewBag.MailDriverType == "MAIL_MAILER")
                                {
                                    <option value="MAIL_MAILER" selected>MAIL MAILER</option>
                                    <option value="MAIL_DRIVER">MAIL DRIVER</option>
                                }
                                else
                                {
                                    <option value="MAIL_MAILER">MAIL MAILER</option>
                                    <option value="MAIL_DRIVER" selected>MAIL DRIVER</option>
                                }
                            </select>
                        </div>
                    </div>

                    <!-- Mail Driver -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Driver</label>
                        <select name="MAIL_DRIVER" class="form-control">
                            @if (ViewBag.MailDriver == "sendmail")
                            {
                                <option value="sendmail" selected>sendmail</option>
                                <option value="smtp">smtp</option>
                            }
                            else
                            {
                                <option value="sendmail">sendmail</option>
                                <option value="smtp" selected>smtp</option>
                            }
                        </select>
                    </div>

                    <!-- Mail Host -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Host</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_HOST" class="form-control" value="@ViewBag.MailHost" placeholder="Mail Host">
                        </div>
                    </div>

                    <!-- Mail Port -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Port</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_PORT" class="form-control" value="@ViewBag.MailPort" placeholder="Mail Port">
                        </div>
                    </div>

                    <!-- Mail Username -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Username</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_USERNAME" class="form-control" value="@ViewBag.MailUsername" placeholder="Mail Username">
                        </div>
                    </div>

                    <!-- Mail Password -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Password</label>
                        <div class="col-lg-12">
                            <input type="password" name="MAIL_PASSWORD" class="form-control" value="@ViewBag.MailPassword" placeholder="Mail Password">
                        </div>
                    </div>

                    <!-- Mail Encryption -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Mail Encryption</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_ENCRYPTION" class="form-control" value="@ViewBag.MailEncryption" placeholder="Mail Encryption">
                        </div>
                    </div>

                    <!-- Sender Mail -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Sender Mail</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_FROM_ADDRESS" class="form-control" value="@ViewBag.MailFromAddress" placeholder="Sender Mail">
                        </div>
                    </div>

                    <!-- Sender Name -->
                    <div class="form-group row mt-2">
                        <label class="col-lg-12">Sender Name</label>
                        <div class="col-lg-12">
                            <input type="text" name="MAIL_FROM_NAME" class="form-control" value="@ViewBag.MailFromName" placeholder="Sender Name">
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group row mt-4">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-primary">Save Settings</button>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>