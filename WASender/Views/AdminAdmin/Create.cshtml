@{
}
@{
    var roles = ViewBag.Roles as List<Role>; // Assuming Role has Name property

    Layout = "~/Views/Shared/_UserLayout.cshtml";

    ViewData["Title"] = "Create Admin";
    ViewData["Buttons"] = new List<dynamic>
    {
        new { name = "Back", url = Url.Action("Index", "AdminAdmin"), is_button = false, components = "" }
    };
}

@await Html.PartialAsync("_HeaderSection")

<div class="row">
    <div class="col-lg-5 mt-5">
        <strong>Create Admin</strong>
        <p>add admin profile information</p>
    </div>

    <div class="col-lg-7 mt-5">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input name="name" class="form-control" placeholder="Enter Name" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input name="email" type="email" class="form-control" placeholder="Enter Email" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input name="password" type="password" class="form-control" placeholder="Enter Password" required />
                    </div>

                    <div class="form-group">
                        <label for="password_confirmation">Confirm Password</label>
                        <input name="password_confirmation" type="password" class="form-control" placeholder="Confirm Password" required />
                    </div>

                    <div class="form-group">
                        <label>Assign Roles</label>
                        <select name="roles[]" multiple class="form-control select2">
                            @foreach (var role in roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        </select>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Save
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
