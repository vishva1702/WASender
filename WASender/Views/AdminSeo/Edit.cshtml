@model Dictionary<string, string>

@{
    ViewData["Title"] = "Edit SEO Settings";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var id = ViewBag.Id;
}

@await Html.PartialAsync("_HeaderSection", new
    {
        Title = "Edit SEO Settings",
        Buttons = new[] {
        new { name = "Back", url = Url.Action("Index", "AdminSeo") }
    }
    })

<form asp-action="Update" asp-controller="AdminSeo" asp-route-id="@id" method="post" enctype="multipart/form-data" class="ajaxform">
    <div class="row">
        <div class="col-lg-5">
            <strong>Edit page SEO settings</strong>
            <p>Edit page SEO and necessary information from here</p>
        </div>

        <div class="col-lg-7 card-wrapper">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Edit Settings</h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label>Meta Title</label>
                        <input type="text" name="metadata[site_name]" required class="form-control"
                               value="@(Model.ContainsKey("site_name") ? Model["site_name"] : "")" />
                    </div>

                    <div class="form-group">
                        <label>Meta Description</label>
                        <textarea name="metadata[matadescription]" required class="summernote form-control h-200">
                            @((Model.ContainsKey("matadescription") ? Model["matadescription"] : ""))
                        </textarea>
                    </div>

                    <div class="form-group">
                        <label>Meta Tags</label>
                        <input type="text" name="metadata[matatag]" required class="form-control"
                               value="@(Model.ContainsKey("matatag") ? Model["matatag"] : "")" />
                    </div>

                    @if (Model.ContainsKey("twitter_site_title"))
                    {
                        <div class="form-group">
                            <label>Twitter Site Title</label>
                            <input type="text" name="metadata[twitter_site_title]" required class="form-control"
                                   value="@Model["twitter_site_title"]" />
                        </div>
                    }

                    <div class="form-group">
                        <label>Meta Image</label>
                        <input type="file" accept="image/*" name="image" class="form-control" />
                    </div>

                    <div class="form-group row mt-3">
                        <div class="col-lg-12">
                            <button type="submit" class="btn btn-neutral submit-button">Save Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
