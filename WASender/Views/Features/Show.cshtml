@await Html.PartialAsync("_Header2")
@{
    ViewData["Title"] = ViewBag.Feature.Post.Title;
}

<main>
    <div class="breadcrumb__area breadcrumb-height p-relative grey-bg"
         style="background-image: url('/assets/frontend/img/breadcrumb/breadcrumb.jpg');">
        <div class="breadcrumb__scroll-bottom smooth">
            <a href="#feature-details">
                <i class="far fa-arrow-down"></i>
            </a>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xxl-12">
                    <div class="breadcrumb__content text-center">
                        <h3 class="breadcrumb__title">@ViewBag.Feature.Post.Title</h3>
                        <div class="breadcrumb__list">
                            <span><a asp-controller="Home" asp-action="Index">Home</a></span>
                            <span class="dvdr"><i class="fa fa-angle-right"></i></span>
                            <span>@ViewBag.Feature.Post.Title</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="feature-detail" class="service-inner__area pt-130 pb-110">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-30 text-center">
                    <img src="@ViewBag.Feature.Banner" alt="Feature Banner">
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="service-inner__process-box">
                        <h3 id="feature-details" class=" service-inner__title">@ViewBag.Feature.Post.Title</h3>
                        <p>@ViewBag.Feature.Excerpt</p>
                    </div>
                    <div class="service-inner__process-box">
                        <p>@Html.Raw(ViewBag.Feature.LongDescription)</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>