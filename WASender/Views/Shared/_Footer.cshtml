@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer


<footer>
    <!-- tp-footer-area-start -->
    <div class="tp-footer__area theme-bg pt-120 pb-50">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="tp-footer__content text-center">
                        <h3 class="tp-section-title text-white wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".3s">
                            @ViewData["FooterTitle"]
                        </h3>
                        <p class="wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".5s">
                            @ViewData["FooterDescription"]
                        </p>
                    </div>

                    <div class="tp-footer__thumb d-flex justify-content-center wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".7s">
                        @if (!string.IsNullOrEmpty(ViewData["FooterButtonImage"] as string))
                        {
                            <div class="tp-footer__thumb-sm">
                                <a href="@ViewData["RightImageLink"]">
                                    <img src="@ViewData["FooterButtonImage"]" alt="">
                                </a>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(ViewData["FooterLeftButtonImage"] as string))
                        {
                            <div class="tp-footer__thumb-sm">
                                <a href="@ViewData["LeftImageLink"]">
                                    <img src="@ViewData["FooterLeftButtonImage"]" alt="">
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="tp-footer-bottom__area mt-80 wow tpfadeUp" data-wow-duration=".9s" data-wow-delay=".9s">
            <div class="container">
                <div class="tp-footer-bottom__border-top pt-40">
                    <div class="row align-items-center">
                        <div class="col-xl-2 col-lg-2 col-md-6 col-12 order-2 order-lg-1 text-center text-md-start">
                            <div class="tp-footer-bottom__logo">
                                <a href="/">
                                    <img src="@ViewData["FooterLogo"]" alt="">
                                </a>
                            </div>
                        </div>

                        <div class="col-xl-7 col-lg-7 col-md-12 col-12 order-1 order-lg-2 d-none d-sm-block">
                            <div class="tp-footer-bottom__menu">
                                <ul>
                                    <li><a href="/features">@Localizer["Features"]</a></li>
                                    <li><a href="/about">@Localizer["About Us"]</a></li>
                                    <li><a href="/pricing">Pricing</a></li>
                                    <li><a href="/features/Faq">@Localizer["FAQ"]</a></li>
                                    <li><a href="/blogs">@Localizer["News"]</a></li>
                                </ul>
                            </div>
                        </div>

                       <div class="col-xl-3 col-lg-3 col-md-6 col-12 order-2 order-lg-3 text-center text-md-end">
                            @* <div class="tp-footer-bottom__social"> *@
                            @*     <select class="w-100 text-center language-switch"> *@
                            @*         @foreach (var lang in (List<KeyValuePair<string, string>>)ViewData["Languages"]) *@
                            @*         { *@
                            @*             <option value="@lang.Key" selected="@(ViewData["Locale"] as string == lang.Key ? "selected" : null)"> *@
                            @*                 @lang.Value *@
                            @*             </option> *@
                            @*         } *@
                            @*     </select> *@
                            @* </div> *@
                        </div> 
                         
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tp-footer-area-end -->
</footer>
