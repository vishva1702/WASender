@{
    var whyChoose = ViewData["WhyChoose"] as Dictionary<string, string>;
}

@if (whyChoose != null)
{
    <!-- tp-choose-area-start -->
    <div class="tp-choose__area pt-120 pb-90" style="background-image: url('/assets/frontend/img/choose/choose-bg.png'); background-size: cover; background-position: center;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="tp-choose__title-box text-center">
                        <h3 class="tp-section-title text-white mb-20">@whyChoose["title"]</h3>
                        <h5 class="tp-choose__subtitle text-white">@whyChoose["subtitle"]</h5>
                    </div>
                    <div class="tp-choose__thumb-box d-flex justify-content-center">
                        <div class="tp-choose__thumb-sm">
                            <a href="@whyChoose["left_button_link"]">
                                <img src="@whyChoose["left_button_image"]" alt="">
                            </a>
                        </div>
                        <div class="tp-choose__thumb-sm">
                            <a href="@whyChoose["right_button_link"]">
                                <img src="@whyChoose["right_button_image"]" alt="">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tp-choose-area-end -->
    <!-- tp-counter-area-start -->
    <div class="tp-counter__area">
        <div class="tp-counter__theme-bg"></div>
        <div class="tp-counter__grey-bg"></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-4">
                    <div class="tp-counter__item d-flex">
                        <div class="tp-counter__icon">
                            <img src="@whyChoose["left_block_image"]" alt="">
                        </div>
                        <div class="tp-counter__content">
                            <span><i class="counter">@whyChoose["left_block_value"]</i></span>
                            <p>@whyChoose["left_block_title"]</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="tp-counter__item d-flex">
                        <div class="tp-counter__icon">
                            <img src="@whyChoose["center_block_image"]" alt="">
                        </div>
                        <div class="tp-counter__content">
                            <span><i class="counter">@whyChoose["center_block_value"]</i></span>
                            <p>@whyChoose["center_block_title"]</p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4">
                    <div class="tp-counter__item d-flex">
                        <div class="tp-counter__icon">
                            <img src="@whyChoose["right_block_image"]" alt="">
                        </div>
                        <div class="tp-counter__content">
                            <span><i class="counter">@whyChoose["right_block_value"]</i></span>
                            <p>@whyChoose["right_block_title"]</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- tp-counter-area-end -->
}