@* @model IEnumerable<WASender.Models.Order>

@{
    ViewBag.Title = "Subscription Log";
}

<h2>Subscription Log</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Plan</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Plan.Name</td>
                    <td>@order.Amount.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No subscriptions found.</p>
}
 *@